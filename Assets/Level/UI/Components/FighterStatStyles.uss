.statContainer {
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    height: 100%;
}

.statIcon {
    -unity-background-scale-mode: scale-to-fit;
    height: 100%;
    margin-right: 3%;
    width: 33%;
}

.statLabel {
    color: rgb(249, 249, 249);
    -unity-font-definition: url("project://database/Assets/Level/UI/FontAssets/MorrisRomanBlack%20SDF.asset?fileID=11400000&guid=3fc2ff6b214ea4acd8efbcc2f4e3760a&type=2#MorrisRomanBlack SDF");
    -unity-text-align: middle-left;
    flex-grow: 0;
    font-size: 200%;
    width: auto;
    height: 100%;
}
